{
  "name": "qrex",
  "description": "QR-Code / 2D Barcode api with both server side and client side support using canvas",
  "version": "1.0.0-beta1",
  "author": "Christian Llontop <me@chrisllontop.com>",
  "keywords": [
    "qr",
    "code",
    "canvas",
    "qrcode",
    "node-qrcode",
    "qrcode-generator"
  ],
  "main": "dist/qrex.js",
  "module": "dist/qrex.js",
  "browser": {
    "./dist/qrex.js": "./dist/qrex.browser.js",
    "fs": false
  },
  "files": [
    "bin",
    "dist"
  ],
  "homepage": "https://github.com/chrisllontop/qrex",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && rspack build",
    "lint:ci": "biome lint && biome format",
    "lint:fix": "biome lint --write && biome format --write",
    "test:dev": "vitest --watch",
    "test:ci": "vitest --coverage --run",
    "prepublish": "pnpm run build"
  },
  "bin": {
    "qrex": "./bin/qrex"
  },
  "dependencies": {
    "dijkstrajs": "^1.0.1",
    "pngjs": "^7.0.0",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@rspack/cli": "^1.1.0",
    "@rspack/core": "^1.1.0",
    "@types/node": "^22.9.1",
    "@types/pngjs": "^6.0.5",
    "@vitest/coverage-istanbul": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8",
    "canvas": "^3.0.1",
    "htmlparser2": "^10.0.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisllontop/qrex"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.10.0+sha512.73a29afa36a0d092ece5271de5177ecbf8318d454ecd701343131b8ebc0c1a91c487da46ab77c8e596d6acf1461e3594ced4becedf8921b074fbd8653ed7051c"
}
